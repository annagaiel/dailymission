<div class="border-div">

<h1 class="text-center">Forgot your password?</h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :email, label_html: { class: 'screenreader' }, required: true, autofocus: true, placeholder: "Email", input_html: {class: "form-control"}  %>

    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>

	<%= render "devise/shared/links" %>

<% end %>

</div>

