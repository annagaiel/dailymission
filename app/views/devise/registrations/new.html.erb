<h2 class="text-center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label_html: { class: 'screenreader' }, placeholder: "Email", input_html: {class: "form-control"}  %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label_html: { class: 'screenreader' }, placeholder: "Password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: true, label_html: { class: 'screenreader' }, placeholder: "Password Confirmation", input_html: {class: "form-control"} %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
