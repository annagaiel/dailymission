<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :content, label_html: {class: 'screenreader'}, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Content" %>
    
    <%= f.button :submit, class: "btn btn-md btn-primary btn-block" %>
<% end %>

